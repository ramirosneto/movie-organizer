<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.testezup.movieorganizer.MainActivity">

    <RelativeLayout
        android:id="@+id/RLleft"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar filme"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ETtitulo"
            android:hint="Nome do filme"
            android:layout_below="@id/textView2"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/lupa"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/BTbuscar"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView2"
            android:layout_alignParentRight="true" />-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RLright"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar filme"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ETtitulocad"
            android:hint="Nome do filme"
            android:layout_below="@id/textView3"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<Button
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:id="@+id/BTcadastrar"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textView3"
            android:layout_alignParentRight="true" />-->
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:fadeScrollbars="true"
        android:clickable="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/RLleft"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ver filmes cadastrados"
        android:background="#3F51B5"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:id="@+id/BTfilmescadastrados"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="verFilmesCadastrados" />
</RelativeLayout>
